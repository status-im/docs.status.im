<!-- The main content area -->
<main id="main" role="main">

	<!-- COMMUNITY-OPEN-SOURCE -->
	<section class="get-involved-intro p-t-160 p-b-160">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<h4><%- __('site.get-involved.community.intro.subtitle') %></h4>
					<h1 class="community-nav-trigger"><%- __('site.get-involved.community.intro.title') %></h1>
					<p class="teaser-1"><%- __('site.get-involved.community.intro.description') %> </p>
					<p><a href="#groups" class="link-arrow"><%- __('site.get-involved.community.intro.link-1') %></a></p>
					<p><a href="mailto:contribute@status.im" class="link-arrow"><%- __('site.get-involved.community.intro.link-2') %></a></p>
					<div class="open-source-illustration-horz"><%- image_tag("/img/open-source-illustration-horz.svg") %></div>
				</div>
			</div>
		</div>
	</section>
	<!-- END-COMMUNITY-OPEN-SOURCE -->

	<div class="position-relative">
		<!-- DEVELOPMENT-QUICK-NAV -->
		<section class="quick-nav">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<ul>
							<li><a href="<%- show_lang() %>/get-involved/educators/"><%- image_tag("/img/educate-small-icon.svg") %><%- __('site.link.educators') %></a></li>
							<li><a href="<%- show_lang() %>/get-involved/community-groups/" class="active"><%- image_tag("/img/community-groups-small-icon.svg") %><%- __('site.link.community-groups') %></a></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- END-DEVELOPMENT-QUICK-NAV -->
	</div>

	<!-- BLOCK-ACCOUNT-CREATION -->
	<section class="block-account-creation p-t-160 p-b-160" id="groups">
		<div class="container">
			<div class="row">
				<% for (let community of site.data.communities) { %>
					<div class="col-lg-6 col-xl-4">
						<div class="account-creation">
							<%- image_tag("/img/" + community.image) %>
							<a href="https://join.status.im/<%= community.publicChat %>" target="_blank">#<%- community.publicChat %></a>
							<p><%- __(community.description) %></p>
							<div class="meta">
								<span class="occupation"><%- __(community.occupation) %></span>
								<% if (community.name.startsWith('site')) { %>
									<span class="name"><%- __(community.name) %></span>
								<% } else { %>
									<span class="name"><%- community.name %></span>
								<% } %>
							</div>
						</div>				
					</div>
				<% } %>
			</div>
		</div>
	</section>
	<!-- END-BLOCK-ACCOUNT-CREATION -->

	<div class="community-nav">
		<a href="#" class="community-nav-trigger-close">
			<svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg"> <rect x="1.5752" y="0.368273" width="22" height="1" rx="0.5" transform="rotate(45 1.5752 0.368273)" fill="#090909"></rect> <rect x="0.868164" y="15.9246" width="22" height="1" rx="0.5" transform="rotate(-45 0.868164 15.9246)" fill="#090909"></rect> </svg>
		</a>
		<nav>
			<ul>
				<li><a href="<%- show_lang() %>/get-involved/developers/"><%- __('site.link.developers') %></a></li>
				<li><a href="<%- show_lang() %>/get-involved/educators/"><%- __('site.link.educators') %></a></li>
				<li><a href="<%- show_lang() %>/get-involved/community-groups/" class="active"><%- __('site.link.community-groups') %></a></li>
			</ul>
		</nav>
	</div>
	<div class="backdrop-community-nav"></div>

</main>